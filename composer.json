{
    "name": "checkend/checkend",
    "description": "PHP SDK for Checkend error monitoring",
    "type": "library",
    "license": "MIT",
    "keywords": ["error-monitoring", "exception-tracking", "checkend", "debugging"],
    "homepage": "https://checkend.com",
    "authors": [
        {
            "name": "Checkend",
            "email": "simon@checkend.com"
        }
    ],
    "support": {
        "issues": "https://github.com/Checkend/checkend-php/issues",
        "source": "https://github.com/Checkend/checkend-php"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "psr/http-server-middleware": "For PSR-15 middleware support"
    },
    "autoload": {
        "psr-4": {
            "Checkend\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Checkend\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse",
        "install-hooks": "./scripts/install-hooks.sh"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "minimum-stability": "stable"
}
